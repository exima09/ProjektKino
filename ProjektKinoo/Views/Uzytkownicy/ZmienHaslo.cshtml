@model ProjektKinoo.ViewModels.User.ZmienHasloVM

@{
    ViewBag.Title = "Zmień Hasło";
}

<h2>Zmień Hasło</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserVM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.Label("Stare Hasło", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.User.PasswordHash, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.User.PasswordHash, "", new { @class = "text-danger" })
                @Html.ValidationMessage("errorPass", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewPass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.NewPass, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewPass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}